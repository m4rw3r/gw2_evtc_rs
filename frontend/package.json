{
    "name": "evtc_rs_frontend",
    "scripts": {
        "build":     "concurrently npm:build-*",
        "build-js":  "rollup -c",
        "build-css": "sass src/index.sass dist/style.css",
        "dist":      "cross-env NODE_ENV=production npm run build",
        "watch":     "concurrently npm:watch-*",
        "watch-js":  "rollup -w -c",
        "watch-css": "sass --watch src/index.sass:dist/style.css",
        "_watch":    "nodemon -w src -q -x \"npm run --silent build || true\""
    },
    "dependencies": {
        "preact": "^8.2.9"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.50",
        "@babel/core": "^7.0.0-beta.50",
        "@babel/plugin-syntax-jsx": "^7.0.0-beta.50",
        "@babel/plugin-transform-react-jsx": "^7.0.0-beta.50",
        "@babel/preset-env": "^7.0.0-beta.50",
        "concurrently": "^3.6.0",
        "cross-env": "^5.2.0",
        "nodemon": "^1.18.1",
        "rollup": "^0.62.0",
        "rollup-plugin-babel": "^4.0.0-beta.7",
        "rollup-plugin-gzip": "^1.4.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^4.0.0",
        "rollup-watch": "^4.3.1",
        "sass": "^1.9.2"
    }
}
